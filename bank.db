CREATE DATABASE banksystem;
USE banksystem; 
show databases;
CREATE TABLE customer_personal_info
(
customer_id VARCHAR(5),/*primary key*/
customer_name VARCHAR(30),
date_of_birth DATE,
guardian_name VARCHAR(30),
address VARCHAR(30),
contact_info VARCHAR(20),
mail_id VARCHAR(30),
gender CHAR(1),
marital_status VARCHAR(20),
identification_doc_type VARCHAR(30),
id_doc_no VARCHAR(20),
citizenship VARCHAR(20),
CONSTRAINT  Customer PRIMARY KEY(customer_id)
 
);

SHOW TABLES;
CREATE TABLE customer_refrence_info
( 
customer_id VARCHAR(5),/*foreign key*/
refrence_acc_name VARCHAR(20),
reference_acc_no VARCHAR(30),
refrence_acc_address VARCHAR(50),
relation VARCHAR(25),
CONSTRAINT  Customer PRIMARY KEY(customer_id),
CONSTRAINT  Customer FOREIGN KEY(customer_id) REFERENCES customer_personal_info(customer_id) 

);
SHOW TABLES;
